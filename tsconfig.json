{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "allowJs": true,
    "declaration": true,
    "sourceMap": false,
    "outDir": "./lib/esm",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["docs/", "lib/"]
}
